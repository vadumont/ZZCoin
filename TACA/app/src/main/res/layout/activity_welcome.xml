<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzcoin.taca.WelcomeActivity"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/ca" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:text="Poser une question"
        android:id="@+id/QuestionButton"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:text="Questions Rapides / CatÃ©gories"
        android:id="@+id/CategoriesButton"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        android:text="Contactez-moi"
        android:id="@+id/ContactButton"
        />

    <TextView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorDoYouKnow"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/doYouKnowImage"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/saviezvous"
        />

</RelativeLayout>
