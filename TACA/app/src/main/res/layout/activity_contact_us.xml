<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzcoin.taca.ContactUs">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/ca" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="5dp"
        android:text="Adresse e-mail :"
        android:textSize="11pt"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorDoYouKnow"
        android:text="Votre e-mail ..."
        android:id="@+id/mailText"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="5dp"
        android:text="Nom et PrÃ©nom :"
        android:textSize="11pt"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Votre nom et prenom ..."
        android:background="@color/colorDoYouKnow"
        android:id="@+id/nameText"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="5dp"
        android:text="Telephone :"
        android:textSize="11pt"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Votre telephone ..."
        android:background="@color/colorDoYouKnow"
        android:id="@+id/phoneText"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:text="Envoyer"
        android:id="@+id/SubmitButton"
        />

</RelativeLayout>
